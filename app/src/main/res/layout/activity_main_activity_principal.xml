<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityPrincipal"
    android:background="@drawable/bg_menu">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Boton_campus"
        android:src="@drawable/modulos_menu"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:clickable="true"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageVideos"
        android:src="@drawable/video"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/Boton_campus"
        android:layout_toRightOf="@+id/Boton_campus"
        android:layout_toEndOf="@+id/Boton_campus"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageMap"
        android:src="@drawable/google_maps"
        android:layout_alignTop="@+id/imageVideos"
        android:layout_alignLeft="@+id/Boton_campus"
        android:layout_alignStart="@+id/Boton_campus" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageAugReal"
        android:src="@drawable/realidad_aumentada"
        android:layout_above="@+id/imageVideos"
        android:layout_alignLeft="@+id/imageVideos"
        android:layout_alignStart="@+id/imageVideos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Modulos"
        android:textSize="25sp"
        android:id="@+id/textView"
        android:layout_below="@+id/Boton_campus"
        android:layout_alignLeft="@+id/Boton_campus"
        android:layout_alignStart="@+id/Boton_campus"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Realidad Aumentada"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/imageAugReal"
        android:layout_alignStart="@+id/imageAugReal"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mapa"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageVideos"
        android:layout_alignLeft="@+id/imageMap"
        android:layout_alignStart="@+id/imageMap"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Multimedia"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageVideos"
        android:layout_alignLeft="@+id/imageVideos"
        android:layout_alignStart="@+id/imageVideos"
        android:textColor="#ffffff"
        android:textSize="25sp" />

</RelativeLayout>
